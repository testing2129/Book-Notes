<header class="notion-header">
  <div class="notion-header-content">
    <a href="/" class="notion-logo">ðŸ“š Book Notes</a>
    <button class="notion-nav-toggle" id="navToggle" aria-label="Open navigation menu">
      <span class="notion-nav-toggle-bar"></span>
      <span class="notion-nav-toggle-bar"></span>
      <span class="notion-nav-toggle-bar"></span>
    </button>
    <nav class="notion-nav" id="notionNav">
      <a href="/" class="notion-nav-link">Home</a>
      <a href="/add" class="notion-nav-link">Add Review</a>
    </nav>
    <div class="notion-style-menu-wrapper">
      <button class="notion-style-menu-btn" id="styleMenuBtn" aria-label="Change font style">
        <span class="notion-style-dot"></span>
        <span class="notion-style-dot"></span>
        <span class="notion-style-dot"></span>
      </button>
      <div class="notion-style-menu" id="styleMenu">
        <div class="notion-style-option" data-font="default">Default (Outfit/Inter)</div>
        <div class="notion-style-option" data-font="serif">Serif (Georgia)</div>
        <div class="notion-style-option" data-font="manrope">Manrope (Free)</div>
      </div>
    </div>
  </div>
</header>
<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Font style menu
    const styleBtn = document.getElementById('styleMenuBtn');
    const styleMenu = document.getElementById('styleMenu');
    const styleOptions = document.querySelectorAll('.notion-style-option');
    styleBtn.addEventListener('click', function(e) {
      e.stopPropagation();
      styleMenu.classList.toggle('open');
    });
    document.addEventListener('click', function() {
      styleMenu.classList.remove('open');
    });
    styleOptions.forEach(opt => {
      opt.addEventListener('click', function(e) {
        e.stopPropagation();
        const font = this.getAttribute('data-font');
        if (font === 'default') {
          document.body.style.fontFamily = "'Outfit', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif";
        } else if (font === 'serif') {
          document.body.style.fontFamily = "Georgia, 'Times New Roman', Times, serif";
        } else if (font === 'manrope') {
          document.body.style.fontFamily = "'Manrope', 'Outfit', 'Inter', sans-serif";
        }
        styleMenu.classList.remove('open');
      });
    });

    // Navigation toggle
    const navToggle = document.getElementById('navToggle');
    const notionNav = document.getElementById('notionNav');
    navToggle.addEventListener('click', function() {
      notionNav.classList.toggle('open');
    });
  });
</script>
<style>
  .notion-nav-toggle {
    display: none;
    flex-direction: column;
    background: transparent;
    border: none;
    cursor: pointer;
  }
  .notion-nav-toggle-bar {
    width: 25px;
    height: 3px;
    background-color: #333;
    margin: 4px 0;
    transition: all 0.3s;
  }
  .notion-nav.open {
    display: block;
  }
  @media (max-width: 767.98px) {
    .notion-nav {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      top: 56px;
      left: 0;
      background-color: white;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .notion-nav.open {
      display: flex;
    }
    .notion-nav-toggle {
      display: flex;
    }
  }
</style>
