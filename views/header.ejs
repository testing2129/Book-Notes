<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Navigation toggle
    const navToggle = document.getElementById('navToggle');
    const notionNav = document.getElementById('notionNav');
    const navOverlay = document.getElementById('navOverlay');
    navToggle.addEventListener('click', function() {
      notionNav.classList.toggle('open');
      navOverlay.classList.toggle('open');
    });
    navOverlay.addEventListener('click', function() {
      notionNav.classList.remove('open');
      navOverlay.classList.remove('open');
    });
  });
</script>
<style>
  .notion-nav-toggle {
    display: none;
    flex-direction: column;
    background: transparent;
    border: none;
    cursor: pointer;
  }
  .notion-nav-toggle-bar {
    width: 25px;
    height: 3px;
    background-color: #333;
    margin: 4px 0;
    transition: all 0.3s;
  }
  .notion-nav.open {
    display: block;
  }
  .notion-nav-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 1000;
  }
  .notion-nav-overlay.open {
    display: block;
  }
  .notion-nav-overlay-list {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  .notion-nav-overlay-link {
    display: block;
    padding: 16px 24px;
    color: #333;
    text-decoration: none;
    transition: background 0.3s;
  }
  .notion-nav-overlay-link:hover {
    background: #f0f0f0;
  }
  @media (max-width: 767.98px) {
    .notion-nav {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      top: 56px;
      left: 0;
      background-color: white;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .notion-nav.open {
      display: flex;
    }
    .notion-nav-toggle {
      display: flex;
    }
  }
</style>
